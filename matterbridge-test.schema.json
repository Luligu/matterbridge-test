{
  "title": "Matterbridge test plugin",
  "description": "matterbridge-test v. 1.0.0 by https://github.com/Luligu",
  "type": "object",
  "properties": {
    "name": {
      "description": "Plugin name",
      "type": "string",
      "readOnly": true
    },
    "type": {
      "description": "Plugin type",
      "type": "string",
      "readOnly": true
    },
    "noDevices": {
      "description": "Do not registers any devices (development only)",
      "type": "boolean",
      "default": false
    },
    "delayStart": {
      "description": "Delay start by 20 seconds (development only)",
      "type": "boolean",
      "default": false
    },
    "longDelayStart": {
      "description": "Delay start by 60 seconds (development only)",
      "type": "boolean",
      "default": false
    },
    "loadSwitches": {
      "description": "Load a defined number of switches (development only)",
      "type": "number",
      "default": 1
    },
    "loadOutlets": {
      "description": "Load a defined number of outlets (development only)",
      "type": "number",
      "default": 1
    },
    "loadLights": {
      "description": "Load a defined number of lights (development only)",
      "type": "number",
      "default": 1
    },
    "setUpdateInterval": {
      "description": "Set an update interval in seconds (development only)",
      "type": "number",
      "default": 0
    },
    "enableElectrical": {
      "description": "Add electrical measurements to the devices (development only)",
      "type": "boolean",
      "default": false
    },
    "enablePowerSource": {
      "description": "Add power source to the devices (development only)",
      "type": "boolean",
      "default": false
    },
    "enableModeSelect": {
      "description": "Add mode select to the devices (development only)",
      "type": "boolean",
      "default": false
    },
    "throwLoad": {
      "description": "Throw on load (development only)",
      "type": "boolean",
      "default": false
    },
    "throwStart": {
      "description": "Throw on start (development only)",
      "type": "boolean",
      "default": false
    },
    "throwConfigure": {
      "description": "Throw on configure (development only)",
      "type": "boolean",
      "default": false
    },
    "throwShutdown": {
      "description": "Throw on shutdown (development only)",
      "type": "boolean",
      "default": false
    },
    "debug": {
      "description": "Enable the debug for the plugin (development only)",
      "type": "boolean",
      "default": false
    },
    "unregisterOnShutdown": {
      "description": "Unregister all devices on shutdown (development only)",
      "type": "boolean",
      "default": false
    }
  }
}
